{
  "template_k8s_logstash": {
    "template" : "logstash-*",
    "mappings" : {
      "fluentd" : {
        "_source" : {"compress" : false},
        "properties" : {
          "@timestamp" : {
            "type" : "date",
            "format" : "dateOptionalTime",
            "index" : "not_analyzed"
          },
          "kubernetes" : {
            "properties" : {
              "container_name" : {
                "type" : "string",
                "index" : "not_analyzed"
              },
              "namespace_name" : {
                "type" : "string",
                "index" : "not_analyzed"
              },
              "pod_name" : {
                "type" : "string",
                "index" : "not_analyzed"
              }
            }
          }
        }
      }
    }
  }
}
